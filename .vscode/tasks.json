{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "g++: compile active file",
            "type": "shell",
            "command": "g++",
            "args": [
                "-std=c++17",
                "-O2",
                "-o",
                "${fileBasenameNoExtension}",
                "${file}"
            ],
            "group": {
                "kind": "none",
                "isDefault": false
            },
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "label": "g++: compile and run (with IO redirection)",
            "type": "shell",
            "dependsOn": "g++: compile active file",
            "command": "cmd",
            "args": [
                "/C",
                "${fileBasenameNoExtension}.exe < input.txt > output.txt"
            ],
            "presentation": {
                "echo": true,
                "reveal": "always",
                "panel": "shared"
            },
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}
